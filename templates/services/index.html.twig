{% extends 'base.html.twig' %}

{% block title %}Our Services{% endblock %}

{% block body %}
    <div class="row mt-5">
        <h1 class="mb-4">Our Services</h1>
            <div class="row">
                {% for service in services %}
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><strong>{{service.name}}</strong></h5>
                                <p class="card-text">{{service.description}}</p>
                                <p class="card-text"><strong>Price:</strong>Kshs{{service.price}}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
