{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <h1>Admin Dashboard</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa fa-fw fa-user"></i> Users</h5>
                    <p class="card-text">{{ UserCount }} clients</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa fa-fw fa-book-open"></i> Bookings</h5>
                    <p class="card-text">{{ BookingsCount }} bookings</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa fa-fw fa-book"></i> Services</h5>
                    <p class="card-text">{{ ServicesCount }} services</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
